{% extends 'base.html.twig' %}
 
{% block title %}Oubli de mot de passe{% endblock %}
 
{% block body %}
    {% for message in app.flashes('danger') %}
        <div class="danger">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="danger">
            {{ message }}
        </div>
    {% endfor %}
    <form method="post">
        <div class="text-center w-50 p-2 mx-auto">
            <img src="images/badplayer.png" width="100" height="100">
            <div class="p-1"></div>
            <h4>RÃ©initialisation du mot de passe</h4>   
            <div class="p-1"></div>
            Merci de confirmer ton E-mail :
            <div class="p-1"></div>
            <label for="inputEmail" class="sr-only">Confirme ton Email :</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <div class="p-2"></div>
            <button class="btn btn-lg btn-primary" type="submit">
                Envoyer l'email
            </button>
        </div>
    </form>
    {% for message in app.flashes('notice') %}
        <div class="info">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}